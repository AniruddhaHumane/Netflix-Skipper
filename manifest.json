{
    "manifest_version": 3,
    "name": "Netflix Skipper",
    "version": "1.0",
    "description": "Automatically skip Netflix intros and jump to the next episode",
    "permissions": ["activeTab", "scripting", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon.png"
      }
    },
    "icons": {
      "48": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}
  